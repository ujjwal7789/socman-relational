<%- include('partials/header', { title: 'Manage Amenities' }) %>

<header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-700 mb-2 sm:mb-0">Manage Amenities</h1>
    <div>
        <a href="/dashboard" class="text-blue-600 hover:underline mr-4">Back to Dashboard</a>
        <button onclick="logout()" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-200">Logout</button>
    </div>
</header>

<main class="grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Left Column: The Form -->
    <div class="md:col-span-1 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Create New Amenity</h3>
        <form id="createAmenityForm" class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-600">Amenity Name</label>
                <input type="text" id="name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
            </div>
            <div>
                <label for="description" class="block text-sm font-medium text-gray-600">Description</label>
                <textarea id="description" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm"></textarea>
            </div>
            <div>
                <label for="booking_rules" class="block text-sm font-medium text-gray-600">Booking Rules</label>
                <textarea id="booking_rules" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm"></textarea>
            </div>
            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded-md transition duration-200">Create Amenity</button>
        </form>
        <p id="formMessage" class="mt-4 text-sm font-medium"></p>
    </div>

    <!-- Right Column: The Table -->
    <div class="md:col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Existing Amenities</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody id="amenitiesTableBody" class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td colspan="3" class="px-6 py-4 text-center text-gray-500">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>

<script src="/js/amenities.js"></script>

<%- include('partials/footer') %>