<!-- Step 1: Include the header. We pass a 'title' variable to it. -->
<%- include('partials/header', { title: 'Manage Apartments' }) %>

<!-- Page Header Section -->
<header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-700 mb-2 sm:mb-0">Manage Apartments</h1>
    <div>
        <a href="/dashboard" class="text-blue-600 hover:underline mr-4">Back to Dashboard</a>
        <button onclick="logout()" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-200">Logout</button>
    </div>
</header>

<!-- Main content area with a two-column layout on medium screens and up -->
<main class="grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Left Column: The Form -->
    <div class="md:col-span-1 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-3xl font-semibold mb-4 border-b pb-2">Create New Apartment</h3>
        <form id="createApartmentForm" class="space-y-4">
            <div>
                <label for="apartment_number" class="block text-sm font-medium text-gray-600">Apartment Number</label>
                <input type="text" id="apartment_number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" required>
            </div>
            <div>
                <label for="block" class="block text-sm font-medium text-gray-600">Block / Wing</label>
                <input type="text" id="block" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded-md transition duration-200">Create Apartment</button>
        </form>
        <p id="formMessage" class="mt-4 text-sm font-medium"></p>
    </div>

    <!-- Right Column: The Table -->
    <div class="md:col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Existing Apartments</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Apartment</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Block</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody id="apartmentsTableBody" class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>

<!-- This page's specific JavaScript logic -->
<script src="/js/apartments.js"></script>

<!-- Step 2: Include the footer -->
<%- include('partials/footer') %>