<!-- views/manage-notices.ejs -->

<%- include('partials/header', { title: 'Manage Notices' }) %>

<header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-700 mb-2 sm:mb-0">Manage Notices</h1>
    <div>
        <a href="/dashboard" class="text-blue-600 hover:underline mr-4">Back to Dashboard</a>
        <button onclick="logout()" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-200">Logout</button>
    </div>
</header>

<main class="grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Left Column: The Form -->
    <div class="md:col-span-1 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Create a New Notice</h3>
        <form id="createNoticeForm" class="space-y-4">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-600">Title</label>
                <input type="text" id="title" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
            </div>
            <div>
                <label for="content" class="block text-sm font-medium text-gray-600">Content</label>
                <textarea id="content" rows="6" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required></textarea>
            </div>
            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-2 px-4 rounded-md transition duration-200">Post Notice</button>
        </form>
        <p id="formMessage" class="mt-4 text-sm font-medium"></p>
    </div>

    <!-- Right Column: The List of Existing Notices -->
    <div class="md:col-span-2 bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Posted Notices</h3>
        <div id="noticesContainer" class="space-y-6">
            <!-- JavaScript will inject the list of notices here -->
            <p class="text-center text-gray-500">Loading notices...</p>
        </div>
    </div>
</main>

<!-- This page uses the specific script for managing notices -->
<script src="/js/manage-notices.js"></script>

<%- include('partials/footer') %>