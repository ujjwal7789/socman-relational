<!-- views/book-amenity.ejs -->

<%- include('partials/header', { title: 'Book an Amenity' }) %>

<header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-700 mb-2 sm:mb-0">Book an Amenity</h1>
    <div>
        <a href="/dashboard" class="text-blue-600 hover:underline mr-4">Back to Dashboard</a>
        <button onclick="logout()" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-200">Logout</button>
    </div>
</header>

<main>
    <div id="booking-form-container" class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h3 class="text-xl font-semibold mb-4 border-b pb-2">Create a New Booking</h3>
        <form id="createBookingForm" class="space-y-4">
            <!-- Amenity selection will be populated by JavaScript -->
            <div>
                <label for="amenity" class="block text-sm font-medium text-gray-600">Select Amenity</label>
                <select id="amenity" name="amenity" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required></select>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label for="start_time" class="block text-sm font-medium text-gray-600">Start Time</label>
                    <input type="datetime-local" id="start_time" name="start_time" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
                </div>
                <div>
                    <label for="end_time" class="block text-sm font-medium text-gray-600">End Time</label>
                    <input type="datetime-local" id="end_time" name="end_time" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
                </div>
            </div>

            <button type="submit" class="">Submit Booking Request</button>
        </form>
        <p id="formMessage" class="mt-4 text-sm font-medium"></p>
    </div>

    <hr>

    <div id="amenities-list-container" class="mt-8">
        <h2 class="text-2xl font-semibold text-gray-600 mb-4">Available Amenities</h2>
        <!-- Amenities will be loaded here as cards -->
        <div id="amenitiesList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
             <p>Loading amenities...</p>
        </div>
    </div>
</main>

<script src="/js/book-amenity.js"></script>

<%- include('partials/footer') %>