<!-- views/assigned-tickets.ejs -->

<%- include('partials/header', { title: 'My Assigned Tickets' }) %>

<header class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-700 mb-2 sm:mb-0">My Assigned Tickets</h1>
    <div>
        <a href="/dashboard" class="text-blue-600 hover:underline mr-4">Back to Dashboard</a>
        <button onclick="logout()" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md transition duration-200">Logout</button>
    </div>
</header>

<main class="bg-white p-6 rounded-lg shadow-lg">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Resident & Apt</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Submitted On</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                </tr>
            </thead>
            <!-- The client-side JS will target this ID to insert the data -->
            <tbody id="ticketsTableBody" class="bg-white divide-y divide-gray-200">
                <tr>
                    <!-- The colspan should be 5 to match the number of headers -->
                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">Loading your assigned tickets...</td>
                </tr>
            </tbody>
        </table>
    </div>
</main>

<!-- This is the JavaScript file that will power this page -->
<script src="/js/assigned-tickets.js"></script>

<%- include('partials/footer') %>